<?xml version="1.0" encoding="utf-8" ?>
<!-- ウィジェット用のレイアウト定義ファイル -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget"
	android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@drawable/widget_background_shape"
    android:focusable="true">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/WifiLayout"
		android:orientation="horizontal"
		android:layout_weight="1"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<ImageButton
			android:id="@+id/WiFiButton"
			android:scaleType="centerInside"
			android:layout_weight="1"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@null"
			android:src="@drawable/wifi_button_off" />
		<!--
			android:layout_alignParentRight="true"
			android:scaleType="fitCenter"
	-->
	</LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/TetheringLayout"
		android:orientation="horizontal"
		android:layout_weight="1"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
<!--
		android:background="#a0ffaaaa"
-->
		<ImageButton
			android:id="@+id/TetheringButton"
			android:scaleType="centerInside"
			android:layout_weight="1"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@null"
			android:src="@drawable/ap_button_off" />
		<!--
			↓これを設定することでバックグラウンドをなくせる
			android:background="@null"
			android:src="@drawable/widget_button" />
	-->

	</LinearLayout>
</LinearLayout>